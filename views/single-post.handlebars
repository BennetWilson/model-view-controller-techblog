<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
        <a href="/post/{{id}}">
        <div class="col-8">{{title}}</div>
        </a>
        </h2>
        <div class="col-3">Posted by {{post.user.id}} on {{format_date post.date_created}}
        </div>
        <p class ="card-body">
            {{post_content}}
        </p>
        </div>
        <input type="hidden" name="post-id" value="{{id}}"/>
        <div class="card">
            <div class="card-header"></div>
            <form id="new-comment-form" class="card-body">
                <p id="form-label">Comment:</p>
                <textarea name="comment-body" id="comment-body" class="form-input"></textarea>
                <button type='submit' class="btn btn-primary">Submit:</button>
            </form>
            {{> comments post.comments}}
        </div>

    